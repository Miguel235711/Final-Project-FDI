    <p class = "h1" style="width: 500px;">Recent publications</p>
        <div class="bd-example">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel"   data-interval="5000">
            <ol class="carousel-indicators" style="background-color:073763;">
                <% for (var i = 0 ; i < carouselInfo.length ; i ++ ) { %>
                    <li data-target="#carouselExampleCaptions" data-slide-to="<%=i%>" class="<%= i === 0 ? 'active' : '' %>"></li>
                <% } %>
            </ol>
            <div class="carousel-inner">
                <% for (var i = 0 ; i < carouselInfo.length ; i ++ ) { %>
                       <div class = "carousel-item <%= i === 0 ? 'active' : '' %>" > 
                        <a href="<%= carouselInfo[i].webUrl%>" target="_blank">
                            <img class="d-block w-100 publicationsHome" data-src="holder.js/800x400?auto=yes&amp;bg=777&amp;fg=555&amp;text=First slide" alt="First slide [800x400]" src= <%= '/img/' + carouselInfo[i].imageUrl %> data-holder-rendered="true">
